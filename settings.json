  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh"
  },
  "alwaysThinkingEnabled": false,
  "tool": {
    "Read": "approve",
    "Grep": "approve",
    "Glob": "approve"
  },
  "performance": {
    "fileOperationTimeout": 30000,
    "maxConcurrentTasks": 3,
    "enableProgressIndicators": true
  },
  "development": {
    "codeQuality": {
      "enforceTypeScript": true,
      "autoLinting": true,
      "securityScanEnabled": true
    }
  },
  "ui": {
    "showTimestamps": true,
    "verboseLogging": false,
    "progressAnimations": true,
    "soundFeedback": true
  },
  "security": {
    "validateFileOperations": true,
    "restrictedPaths": [
      "/System",
      "/usr/bin",
      "/usr/sbin",
      "/etc",
      "/var",
      "/private",
      "/tmp",
      "/opt"
    ],
    "blockedFiles": [
      ".env",
      ".envrc",
      ".env.*",
      "credentials.json",
      "*.pem",
      "*.key",
      "*.pfx",
      "*_rsa",
      "*_dsa",
      "*_ecdsa",
      "*.p12",
      "secrets.yml",
      "secrets.yaml",
      "*.crt",
      "*.csr",
      "auth.json",
      "token.json",
      "*.keystore",
      "id_rsa",
      "id_dsa",
      "id_ecdsa"
    ],
    "allowedFileTypes": [
      ".js",
      ".ts",
      ".tsx",
      ".jsx",
      ".json",
      ".md",
      ".css",
      ".scss",
      ".html",
      ".xml",
      ".yaml",
      ".yml",
      ".toml"
    ]
  },
  "logging": {
    "enableCommandHistory": true,
    "maxHistorySize": 1000,
    "logLevel": "info",
    "timestampFormat": "YYYY-MM-DD HH:mm:ss"
  },
  "maxTokens": 100000,
  "autoSave": false,
  "telemetry": false
}
